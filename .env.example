# ==================================================
# APLICAÇÃO
# ==================================================

APP_NAME=AuraPark
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# ==================================================
# LOGS
# ==================================================

LOG_CHANNEL=stack
LOG_LEVEL=debug

# ==================================================
# BANCO DE DADOS (PostgreSQL)
# ==================================================

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=aurapark
DB_USERNAME=aurapark
DB_PASSWORD=aurapark123

# ==================================================
# CACHE / SESSION / QUEUE
# ==================================================

CACHE_DRIVER=database
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# ==================================================
# REDIS (opcional)
# ==================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==================================================
# MAIL (desenvolvimento)
# ==================================================

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@aurapark.test"
MAIL_FROM_NAME="${APP_NAME}"

# ==================================================
# FILESYSTEM
# ==================================================

FILESYSTEM_DISK=local

# ==================================================
# FRONTEND (Vite)
# ==================================================

VITE_APP_NAME="${APP_NAME}"
